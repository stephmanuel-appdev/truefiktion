<div class="page-header">
  <h3>Enrollment #<%= @enrollment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Issue</dt>
      <dd>
        <% if @enrollment.issue.present? %>
          <a href="/issues/<%= @enrollment.issue_id %>">
            <%= @enrollment.issue.user_id %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @enrollment.user.present? %>
          <a href="/users/<%= @enrollment.user_id %>">
            <%= @enrollment.user.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/enrollments" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @enrollment.user %>
        <a href="/enrollments/<%= @enrollment.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_enrollment/<%= @enrollment.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
