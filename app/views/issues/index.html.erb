<div class="page-header">
  <h1>
    Issues
    <a href="/issues/new" class="btn btn-lg btn-success">New Issue</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.user_id %></td>
        <td>
          <a href="/issues/<%= issue.id %>" class="btn btn-primary">Show</a>
          <a href="/issues/<%= issue.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_issue/<%= issue.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
